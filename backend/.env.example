# ========================================
# Database Configuration
# ========================================
DATABASE_URL=postgresql://jinmokim:your_password@localhost:5432/virtual-assistant

# ========================================
# JWT Configuration
# ========================================
SECRET_KEY=your-secret-key-here-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ========================================
# OAuth 2.0 - Google
# ========================================
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8000/api/v1/auth/google/callback

# ========================================
# OAuth 2.0 - Kakao
# ========================================
KAKAO_CLIENT_ID=your-kakao-client-id
KAKAO_CLIENT_SECRET=your-kakao-client-secret
KAKAO_REDIRECT_URI=http://localhost:8000/api/v1/auth/kakao/callback

# ========================================
# OAuth 2.0 - Naver
# ========================================
NAVER_CLIENT_ID=your-naver-client-id
NAVER_CLIENT_SECRET=your-naver-client-secret
NAVER_REDIRECT_URI=http://localhost:8000/api/v1/auth/naver/callback

# ========================================
# OpenAI API
# ========================================
OPENAI_API_KEY=sk-your-openai-api-key

# ========================================
# Vector Database - ChromaDB
# ========================================
CHROMA_PERSIST_DIRECTORY=./data/chroma
CHROMA_COLLECTION_NAME=company_manuals

# ========================================
# Redis (for caching & session)
# ========================================
REDIS_URL=redis://localhost:6379/0

# ========================================
# Slack Integration
# ========================================
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_SIGNING_SECRET=your-slack-signing-secret

# ========================================
# Application Settings
# ========================================
APP_NAME=Virtual Desk Assistant
APP_VERSION=1.0.0
DEBUG=True
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
API_PREFIX=/api/v1

# ========================================
# Embedding Model
# ========================================
EMBEDDING_MODEL=text-embedding-3-large
EMBEDDING_DIMENSION=3072

# ========================================
# LLM Settings
# ========================================
LLM_MODEL=gpt-4o
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2000

# ========================================
# File Upload
# ========================================
MAX_UPLOAD_SIZE_MB=10
UPLOAD_DIR=./data/uploads

# ========================================
# Logging
# ========================================
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log
